	 * Create the frame.
	 */
	public CurrentValueWindow() {
		setTitle("\u0421\u0442\u043E\u0439\u043D\u043E\u0441\u0442 \u043D\u0430 \u043F\u0430\u0440\u0438\u0442\u0435");
